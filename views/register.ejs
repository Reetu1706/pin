<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-[25vw] bg-white px-20 py-20 rounded-[30px]" >
    <h1 class="text-3xl mb-7 text-zinc-700 font-semibold trackline-tighter capitalize text-center leading-none">Create New Account</h1>
    <form action="/register" method="post">
      <input class="border-2 rounded-md block w-full mt-2 px-3 py-2" type="text" name="username" placeholder="username">
      <input class="border-2 rounded-md block w-full mt-2 px-3 py-2" type="text" name="fullname" placeholder="Full name">
      <input class="border-2 rounded-md block w-full mt-2 px-3 py-2" type="email" name="email" placeholder="email">
      <input class="border-2 rounded-md block w-full mt-2 px-3 py-2" type="number" name="contact" placeholder="contact">
      <input class="border-2 rounded-md block w-full mt-2 px-3 py-2" type="password" name="password" placeholder="password">
      
      <input class="border-2 block w-full mt-5 px-3 py-2 bg-red-500 text-white rounded-full" type="submit" value="Create New Account">
      <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; and acknowledge you've read our Privacy Policy.</p>
    </form>
    <a class="inline-block mt-7 text-sm text-zinc-700 font-semibold text-center w-full" href="/">Already have an account? Login</a>
  </div>
</div>
<% include ./partials/footer.ejs %>